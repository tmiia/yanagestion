*,*::before,*::after{box-sizing:border-box}body,h1,h2,h3,h4,h5,h6,p,figure,blockquote,dl,dd{margin:0}ul,ol{padding:0}html{scroll-behavior:smooth;font-family:sans-serif}body{line-height:1.5;min-height:100vh;text-rendering:optimizeSpeed;-webkit-font-smoothing:antialiased}ul,ol{list-style:none}a{text-decoration:none;color:inherit}img{max-width:100%;display:block}input,button,textarea,select{font:inherit}html,body{height:100%}@font-face{font-family:poppins;src:url(/fonts/Poppins-Light.ttf)format("truetype");font-weight:light;font-style:normal}@font-face{font-family:poppins;src:url(/fonts/Poppins-SemiBold.ttf)format("truetype");font-weight:600;font-style:normal}@font-face{font-family:poppins;src:url(/fonts/Poppins-Bold.ttf)format("truetype");font-weight:700;font-style:normal}body{background:#fff}body{display:flex;justify-content:center;height:fit-content}.hero{display:flex;align-items:center;justify-content:center;flex-direction:column;min-height:50vh}.hero .main-content{display:flex;align-items:center;justify-content:center;flex-direction:column}.hero .main-content .hero__title{font-size:clamp(1.25rem,5.5vw,3rem);font-weight:700;width:30ch;text-transform:uppercase;color:#435966;text-align:center}.our_services{display:flex;flex-wrap:wrap;gap:clamp(1rem,4vw,2rem);padding:clamp(1.5rem,6vw,3rem)}.our_services .left{display:flex;flex-direction:column;flex:1}.our_services .left .primary-btn{margin-top:auto}.our_services .right{flex:3}@media(max-width:768px){.our_services{flex-direction:column}}.wrapper{max-width:1200px}.row{display:flex;gap:clamp(1rem,4vw,2rem)}.row+.row{margin-top:clamp(1rem,4vw,2rem)}@media(max-width:576px){.row{flex-wrap:wrap}}.sect__title{font-size:clamp(.75rem,3vw,1.5rem);font-weight:600;text-transform:uppercase;color:#435966}.sect__description{font-weight:300;color:#6a7b86}.primary-btn{display:flex;gap:clamp(.25rem,1vw,.5rem);background-color:#ff914d;width:fit-content;padding:clamp(.625rem,2.5vw,1.25rem);border-radius:1000px;transition:.3s ease-in-out}.primary-btn::after{content:attr(data-text);display:none;color:#fff;font-weight:400;font-size:clamp(.875rem,2.5vw,1.125rem);padding:0 clamp(.5rem,2vw,1rem)}.primary-btn:hover::after{display:block}.primary-btn.blue{background-color:#435966}.card{display:flex;border-radius:1rem;padding:clamp(.5rem,2vw,1rem);background-color:rgba(67,89,102,.011);box-shadow:0 0 4px #BFC7CA;overflow:hidden}.card__image{display:flex;justify-content:flex-end}.card__content{margin-bottom:clamp(.25rem,1vw,.5rem)}.card__content .card__title{font-size:clamp(1rem,3vw,1.25rem);margin-bottom:clamp(.25rem,1vw,.5rem);color:#435966}.card__content .card__text{font-size:clamp(.875rem,2vw,1rem);color:#6a7b86;font-weight:300}@media(min-width:500px){.card{flex-direction:row}.card__image{flex:1}.card__image img{transform:translateX(25%)scale(1.3);max-height:190px}.card__content{flex:2;height:fit-content}}@media(max-width:500px){.card{flex-direction:column}.card__image{margin-top:-25%;transform:translate(15%,35%)}}